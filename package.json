{
  "name": "heart-stamp-diary",
  "version": "1.0.0",
  "description": "AI-powered emotional diary app with automatic teacher comments and daily stamp collection",
  "author": "Bangsil Choi <59inu.dev@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "index.ts",
  "overrides": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "react-native-safe-area-context": "$react-native-safe-area-context"
  },
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "build:ios:dev": "APP_ENV=development eas build --profile development --platform ios",
    "build:ios:preview": "APP_ENV=development eas build --profile preview --platform ios",
    "build:ios:prod": "APP_ENV=production eas build --profile production --platform ios",
    "build:android:dev": "APP_ENV=development eas build --profile development --platform android",
    "build:android:preview": "APP_ENV=development eas build --profile preview --platform android",
    "build:android:prod": "APP_ENV=production eas build --profile production --platform android",
    "update:preview": "APP_ENV=development eas update --branch preview --message",
    "update:prod": "APP_ENV=production eas update --branch production --message"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "11.4.1",
    "@react-native-firebase/analytics": "^23.5.0",
    "@react-native-firebase/app": "^23.5.0",
    "@react-native-masked-view/masked-view": "0.3.2",
    "@react-navigation/bottom-tabs": "^7.7.2",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/stack": "^7.6.1",
    "@sentry/react-native": "~7.2.0",
    "axios": "^1.13.1",
    "date-fns": "^4.1.0",
    "expo": "54.0.23",
    "expo-constants": "~18.0.10",
    "expo-dev-client": "~6.0.17",
    "expo-device": "~8.0.9",
    "expo-file-system": "~19.0.17",
    "expo-image": "~3.0.10",
    "expo-image-manipulator": "~14.0.7",
    "expo-image-picker": "~17.0.8",
    "expo-linear-gradient": "~15.0.7",
    "expo-location": "~19.0.7",
    "expo-notifications": "~0.32.12",
    "expo-secure-store": "~15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-updates": "~29.0.12",
    "expo-web-browser": "~15.0.9",
    "firebase": "^12.5.0",
    "jest-expo": "~54.0.13",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-calendars": "^1.1313.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-get-random-values": "~1.11.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-toast-message": "^2.3.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "babel-jest": "~29.7.0",
    "babel-preset-expo": "^54.0.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "~29.7.0",
    "jest-environment-jsdom": "~29.7.0",
    "jest-expo": "~54.0.13",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  }
}
