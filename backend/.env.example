# Anthropic Claude API Key
CLAUDE_API_KEY=your_claude_api_key_here

# Server Port
PORT=3000

# Admin Secret Token (for protected endpoints)
# Generate a secure random string: openssl rand -hex 32
ADMIN_SECRET=your_secure_admin_token_here

# CORS Allowed Origins (comma-separated for multiple origins)
# Development: Use * or specific IPs
# Production: Use your domain only
ALLOWED_ORIGINS=*

# Firebase Admin SDK Service Account
# Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# AWS S3 Configuration (Optional - if not set, images will be stored locally)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_REGION=ap-northeast-2
# S3_BUCKET_NAME=heart-stamp-images

# Nanobanana AI Configuration (Optional - for AI illustration generation)
# NANOBANANA_API_KEY=your_nanobanana_api_key
# NANOBANANA_REFERENCE_IMAGE_URLS=https://url1.com/image1.jpg, https://url2.com/image2.jpg
# NANOBANANA_CALLBACK_URL=https://your-backend-url.com/api/nanobanana/callback
